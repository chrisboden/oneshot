#!/bin/bash

# Simple bash script to invoke the agent runner
# Usage: ./oneshot <agent_name> <message> [--run-id <run_id>] [--json] [--debug]

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Change to the project root directory (parent of app)
cd "$SCRIPT_DIR/.."

# Call the agent runner with all arguments
python3 app/agent_runner.py "$@"